# ===== بدّل وبيع - Environment Variables Example =====
# انسخ هذا الملف إلى .env وغيّر القيم

# MongoDB Connection String
# احصل على الرابط من MongoDB Atlas
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# JWT Secret - مفتاح سري قوي (غيّره!)
# استخدم مفتاح عشوائي طويل - على الأقل 32 حرف
JWT_SECRET=your_very_secure_random_jwt_secret_key_here

# Server Configuration
PORT=3000
NODE_ENV=development

# Admin Contact
ADMIN_PHONE=+961 XX XXX XXX
